{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMake Build",
            "command": "${workspaceFolder}/cmake_build.sh",
            "group": "build",
        },
        {
            "type": "shell",
            "label": "CMake Run",
            "command": "${workspaceFolder}/build/main",
            "dependsOn": "CMake Build",
        },
        {
            "type": "shell",
            "label": "CMake Test",
            "command": "ctest",
            "options": {
                "cwd": "${workspaceFolder}/build",
            },
            "group": "test",
            "dependsOn": "CMake Build",
        },
        {
            "type": "shell",
            "label": "CMake Clean",
            "command": "rm -rf ${workspaceFolder}/build",
        },
        {
            "type": "shell",
            "label": "Bazel Build",
            "command": "bazel build //:hello",
            "group": "build",
        },
        {
            "type": "shell",
            "label": "Bazel Run",
            "command": "bazel run //:main",
        },
        {
            "type": "shell",
            "label": "Bazel Test",
            "command": "bazel test //:hello_test",
            "group": "test",
        },
        {
            "type": "shell",
            "label": "Bazel Clean",
            "command": "bazel clean",
        },
    ]
}